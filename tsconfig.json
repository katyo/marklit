{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core"
    ]
  },
  "files": [
    "src/regex.ts",
    "src/match.ts",
    "src/parser.ts",
    "src/render.ts",
    "src/model.ts",
    "src/inline/model.ts",
    "src/inline/rules.ts",
    "src/block/model.ts",
    "src/block/rules.ts",
    "src/render/str.ts",
    "src/render/html/inline.ts",
    "src/render/html/block.ts",
    "src/index.ts"
  ]
}
